# screen lock
super + x
    i3lock --color "#000000"

# terminal emulator
super + Return
    gnome-terminal

# program launcher
super + shift + space
    rofi -modi drun -show-icons -show

# screenshots
# full screen
Print
    maim --quality 10 $(date +%s).png

# current window
super + Print
    maim --quality 10 --window $(xdotool getactivewindow) $(date +%s).png

# selection
super + shift + Print
    maim --quality 10 --select $(date +%s).png

# selection and copy to clipboard
super + control + Print
    maim --quality 10 --select | xclip -selection clipboard -t image/png

# volume control
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioRaiseVolume
    pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 0 -5%

super + F10
    pactl set-sink-volume 0 +5%
super + F11
    pactl set-sink-volume 0 -5%
super + F12
    pactl set-sink-mute 0 toggle

# brightness
XF86MonBrightnessUp
    xbacklight -inc 5
XF86MonBrightnessDown
    xbacklight -dec 5

XF86Forward
    xbacklight -inc 5
XF86Back
    xbacklight -dec 5

# media player controls
XF86AudioPlay
    playerctl play-pause
XF86AudioPause
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioStop
    playerctl stop

super + F5
    playerctl play-pause
super + F6
    playerctl previous
super + F7
    playerctl next
super + F8
    playerctl stop

# calculator
XF86Calculator
    speedcrunch

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd
